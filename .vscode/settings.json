{
    "files.associations": {
        "*.cc": "cpp",
        "*.hh": "cpp",
        "*.vert": "glsl",
        "*.frag": "glsl",
        "array": "cpp",
        "string_view": "cpp"
    },
    "files.exclude": {
        "**/*.in": true,
        "**/*.Po": true,
        "**/Makefile": true,
        "**/autom4te.cache": true,
        "**/m4": true
    },
    "clang.cxxflags": [
        "-Wno-c++1z-extensions",
        "-Wno-pragma-once-outside-header"
    ]
}
